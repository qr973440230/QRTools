<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/capture_containter"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/capture_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"/>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/capture_crop_layout"
        android:background="@drawable/scan_mask">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/top_mask"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:alpha="0.5"
            android:src="@drawable/s_light"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/top_openpicture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:alpha="0.5"
            android:src="@drawable/s_img"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/top_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:alpha="0.5"
            android:src="@drawable/s_left_jiantou"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/capture_crop_layout"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        android:background="@drawable/capture"
        android:contentDescription="@string/app_name">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/capture_scan_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:background="@drawable/kakalib_scan_ray"
            android:contentDescription="@string/app_name"/>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottom_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/capture_crop_layout"
        android:background="@drawable/scan_mask"
        android:contentDescription="@string/app_name"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/left_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_mask"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/rl_title"
        android:layout_toLeftOf="@id/capture_crop_layout"
        android:background="@drawable/scan_mask"
        android:contentDescription="@string/app_name"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/capture_crop_layout" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/right_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_mask"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rl_title"
        android:layout_toRightOf="@id/capture_crop_layout"
        android:background="@drawable/scan_mask"
        android:contentDescription="@string/app_name"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/capture_crop_layout" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_help"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/capture_crop_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:text="将二维码图片对准扫描框即可自动扫描"
        android:textColor="@android:color/white"
        android:textSize="15sp"/>

    <LinearLayout
        android:id="@+id/ll_scan_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:weightSum="2"
        android:layout_alignParentStart="true">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/code_icon"
            android:gravity="center"
            android:padding="10dp"
            android:src="@drawable/code_icon"
            android:text="二维码"
            android:textColor="#DBD5D5"
            android:layout_marginStart="30dp" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/linecode_icon"
            android:gravity="center"
            android:src="@drawable/linecode_icon"
            android:text="条形码"
            android:textColor="#DBD5D5"
            android:layout_marginEnd="30dp" />
    </LinearLayout>
</RelativeLayout>